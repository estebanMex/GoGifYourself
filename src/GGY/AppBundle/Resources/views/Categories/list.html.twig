{% extends "::base.html.twig" %}

{% block title %}{{ parent() }}Catégories{% endblock %}

{% block body %}
    {{ parent() }}
<section id="maincontent">
    <div class="container">
        <h1>Catégories</h1>
        <ul>
            {% for cat in categories %}
